@namespace Client.Components.Common

@if (Record.Type == RecordType.Group)
{
    <TreeViewGroupItemComponent ActiveRecords="ActiveRecords" Record="Record" />
}
else
{
    <TreeViewArticleItemComponent ActiveRecords="ActiveRecords" Record="Record" />
}

@code {
    [Parameter]
    public RecordVM Record { get; set; }

    [Parameter]
    public List<RecordVM> ActiveRecords { get; set; }
}
