@inject IDispatcher Dispatcher

<button class=@("tab " + (IsActive ? "col active-tab" : "col-4")) @onclick="OnTabChanged">
    @ChildContent
</button>

<style>
    .tab{
        padding: 5px 0;
        font-size: 14px;
        transition: 0.2s ease;
    }

        .tab:focus {
            border: none;
            outline: none;
        }

    .tab i{
        margin-right: 7px;
    }

    .active-tab {
        font-size: 20px;
        -webkit-box-shadow: 0px 0px 19px 2px rgba(107, 107, 107, 0.18) inset;
        -moz-box-shadow: 0px 0px 19px 2px rgba(107, 107, 107, 0.18) inset;
        box-shadow: 0px 0px 19px 2px rgba(107, 107, 107, 0.18) inset;
    }
</style>

@code {
    [Parameter]
    public EventCallback OnTabChanged { get; set; }

    [Parameter]
    public bool IsActive { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
